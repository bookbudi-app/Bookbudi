<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="3dp"
        app:contentPadding="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/moreBookImage"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreBookName"
                    android:text=""
                    android:textColor="#456"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreSubject"
                    android:layout_below="@+id/moreBookName"
                    android:layout_marginTop="15dp"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/moreClass"
                    android:layout_below="@+id/moreSubject"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loc"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/moreClass"
                    android:src="@drawable/ic_location_on_red_400_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreCity"
                    android:layout_toRightOf="@+id/loc"
                    android:layout_toEndOf="@+id/loc"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:layout_below="@+id/moreClass"/>

          <!--      <Button
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/moreBut"
                    android:layout_below="@+id/moreClass"
                    android:layout_alignParentRight="true"
                    android:text="MORE"
                    android:textColor="#fff"
                    android:background="@drawable/more_button"
                    android:layout_gravity="right"
                    tools:ignore="HardcodedText,RtlHardcoded" />  -->

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>